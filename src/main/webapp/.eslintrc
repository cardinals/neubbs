{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "arrowFunctions": true,
      "classes": true,
      "modules": true,
      "defaultParams": true
    }
  },
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
     "document": true,
     "window": true,
   },
  "rules": {
    "semi": 0,
    "arrow-body-style": 0,
    "jsx-a11y/href-no-hash": 0,
    "react/prop-types": 0
  }
}
